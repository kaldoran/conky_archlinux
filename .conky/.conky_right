
background yes
update_interval 2

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 20
gap_y 20
minimum_size 200 500
maximum_width 400
own_window yes
own_window_type desktop
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value o
own_window_title clicky 
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_shade_color 112422

override_utf8_locale yes
default_bar_size 120 5
use_xft yes
xftfont Raleway:size=10
xftalpha 1
uppercase no

default_color FFFFFF
color1 DDDDDD
color2 AAAAAA
color3 888888
color4 EF5A29
color5 64FE2E
color6 2F4F4F               # dark slate gray

${color1} ${cpu cpu1 50,200 FFFF00 FF0000 s}




